<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="130dp"
        android:layout_height="149dp"
        android:scaleType="fitXY"
        android:src="@drawable/trivial_freak"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="false"
        android:layout_alignParentRight="false"
        android:layout_alignWithParentIfMissing="false"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"/>

    <Button
        android:id="@+id/botonJugar"
        android:layout_width="@dimen/button_width"
        android:layout_height="50dp"
        android:text="JUGAR"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        android:layout_below="@id/imageView"
        />

    <Button
        android:id="@+id/botonAcercaDe"
        android:layout_width="@dimen/button_width"
        android:layout_height="wrap_content"
        android:text="ACERCA DE..."
        android:layout_below="@+id/botonJugar"
        android:layout_centerHorizontal="true" />
    <Button
        android:id="@+id/botonEnviarPregunta"
        android:layout_width="@dimen/button_width"
        android:layout_height="wrap_content"
        android:text="Envia tu pregunta!"
        android:layout_below="@+id/botonAcercaDe"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/botonSalir"
        android:layout_width="@dimen/button_width"
        android:layout_height="wrap_content"
        android:text="SALIR"
        android:layout_below="@+id/botonEnviarPregunta"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
